{
  "name": "@windingtree/ipfs-apis",
  "version": "1.0.0",
  "description": "IPFS API",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "private": true,
  "scripts": {
