  "dependencies": {
    "@windingtree/org.id-utils": "1.0.0-beta.47",
    "@web-std/blob": "3.0.3",
    "@web-std/file": "3.0.2",
    "ipfs-core": "0.14.0"
  },
  "devDependencies": {
    "dotenv": "15.0.1",
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.0",
    "@types/chai-as-promised": "7.1.4",
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "eslint": "8.8.0",
    "mocha": "9.2.0",
    "nyc": "15.1.0",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  }
